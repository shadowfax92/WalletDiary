<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5px"
    android:paddingBottom="5px"
    >
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TableRow 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
        <TextView 
		    android:id="@+id/income_list_time"
		    android:text="Time"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textColor="#505050"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:gravity="center_horizontal"
		/>
    </TableRow>    
    <TableRow 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

			<TextView 
			    android:id="@+id/income_list_category"
			    android:text="Not Categorised"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:textColor="#3b5998"
			    android:textAppearance="?android:attr/textAppearanceSmall"
			    android:ellipsize="end"
			    android:gravity="left"
			    />
			<TextView 
			    android:id="@+id/income_list_refno"
			    android:text="No Payment Type"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:textColor="#3b5998"
			    android:textAppearance="?android:attr/textAppearanceSmall"
			    android:gravity="center_horizontal"
			    />
	        <TextView
	            android:id="@+id/income_list_amount"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Unknown"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="#990000" 
	            android:gravity="right"/>
     

	</TableRow>
	<TableRow 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    >
	   	<TextView 
	   	    android:id="@+id/income_list_descrip"
	   	    android:layout_width="fill_parent"
	   	    android:layout_height="fill_parent"
	   	    android:text="No Description"
	   	    android:textColor="#505050"
		    android:textAppearance="?android:attr/textAppearanceSmall"
	   	    />
	</TableRow>
</TableLayout>
</LinearLayout>